
public class App {

	public static void main(String[] args) {
		// declarer les variables
		int nbEtoile;
		String etoile = "";
		// demander le nombre de la base du triangle
		Terminal.ecrireString("nombre d'etoiles de la base du triangle :");
		// nb_etoile<-lire entier()
		nbEtoile = Terminal.lireInt();
		// nombre de lignes
		for (int i = 0; i < nbEtoile; i++) {
			etoile = etoile + "* ";
			Terminal.ecrireStringln(etoile);
		}

	}

}
